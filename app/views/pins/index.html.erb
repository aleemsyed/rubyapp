
<p id="notice"><%= notice %></p>
<div class="panel panel-default">
  <div class="panel-heading">
    <div class="row">
      <div class="col-xs-8">
        <h2>Listing Pins</h2> 
      </div>
      <div class="col-xs-4">
        <%= link_to '<i class="glyphicon glyphicon-plus"></i>'.html_safe, new_pin_path, class: "btn btn-warning pull-right" %>
        </div>
    </div>
  </div>
  <div class="panel-body">
      <table class="table table-stripped">
    <thead>
      <tr>
        <th>Description</th>
        <th>User Id</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @pins.each do |pin| %>
        <tr>
          <td><%= pin.description %></td>
          <td><%= pin.user.email %></td>
          <td><%= link_to 'Show', pin, class:"btn btn-success btn-sm" %></td>
          <% if pin.user == current_user %>
          <td><%= link_to 'Edit', edit_pin_path(pin) %></td>
        <td>  <%= link_to '<i class="glyphicon glyphicon-trash"></i>'.html_safe,  pin, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs" %>
          </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
   </div>
   <div class="panel-footer">
  
  </div>
  </div>
 

</div>
